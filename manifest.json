{
  "manifest_version": 2,
  "name": "Email Feed",
  "version": "1.0.0",
  "description": "Show the emails of a folder as Feed",
  "author": "parnoldx",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "emailfeed@echoeagle.unbox.at",
      "strict_min_version": "106.0"
    }
  },

  "permissions": [
    "accountsRead",
    "messagesRead",
    "tabs",
    "menus",
    "activeTab"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },


  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "web_accessible_resources": [
    "icons/*",
    "emailfeed/*"
  ],

  "commands": {
    "open-feed": {
      "suggested_key": {
        "default": "Ctrl+Alt+F"
      },
      "description": "Open Feed for selected folder"
    }
  }
}